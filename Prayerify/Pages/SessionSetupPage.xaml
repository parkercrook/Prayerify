<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="Prayerify.Pages.SessionSetupPage"
			 Title="Session">
	<VerticalStackLayout Padding="16" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="Start a prayer session!" FontSize="40" HorizontalOptions="Center"/>
        <Label Text="How many items do you want to pray for?" FontSize="20" HorizontalOptions="Center" />
		<Stepper x:Name="PrayerCountStepper" Minimum="0" Maximum="{Binding TotalPrayerCount}" Increment="1" Value="{Binding Count}" HorizontalOptions="Center" IsEnabled="{Binding CanIncreaseCount}" />
		<Label Text="{Binding Count}" FontSize="48" HorizontalOptions="Center" FontAttributes="Bold"/>
		<Button Text="Start" Command="{Binding StartCommand}" HorizontalOptions="Center" FontSize="40" IsEnabled="{Binding CanStartSession}" MinimumWidthRequest="200"/>
	</VerticalStackLayout>
</ContentPage>


