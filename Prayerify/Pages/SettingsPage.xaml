<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prayerify.Pages.SettingsPage"
             Title="Settings">
    <VerticalStackLayout Padding="16" Spacing="16">
        <Frame Padding="12" CornerRadius="12" HasShadow="False">
            <HorizontalStackLayout Spacing="130" VerticalOptions="Center">
                <Label Text="Dark Mode" VerticalOptions="Center" FontSize="20"/>
                <Switch IsToggled="{Binding DarkModeEnabled}" HorizontalOptions="End"/>
            </HorizontalStackLayout>
        </Frame>
        
        <Frame Padding="12" CornerRadius="12" HasShadow="False" BackgroundColor="#FFE6E6" BorderColor="#FF6B6B">
            <VerticalStackLayout Spacing="8">
                <Label Text="Clear All Data" FontSize="20" FontAttributes="Bold" TextColor="#D63031"/>
                <Label Text="This will permanently delete all your prayers and categories. This action cannot be undone." 
                       FontSize="14" TextColor="#636E72" LineBreakMode="WordWrap"/>
                <Button Text="Clear All Data" 
                        Command="{Binding ClearAllDataCommand}"
                        BackgroundColor="#E17055" 
                        TextColor="White"
                        CornerRadius="8"
                        IsEnabled="{Binding IsNotBusy}"/>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>